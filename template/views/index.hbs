{{>header}}
<div class="container ">
    <div class="row mt-5">
        <h1>{{title}}</h1>
        {{#each data}}
        <div class="card col-md-4 border-0 mt-2 ">
            <div class="border rounded-2 bg-light ">
                <img src="{{this.urlToImage}}" class="card-img-top" alt="..." height="200px">
                <div class="card-body">
                <h6>author is : {{this.author}}  </h6>
                    <h5 class="card-title">{{ this.title }}</h5>
                    <p class="card-text">{{this.content}}</p>
                </div>
            </div>

        </div>
        {{/each}}
    </div>

</div>
{{>footer}}